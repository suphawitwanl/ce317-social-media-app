<% content_for :title, "Log In" %>

<div class="container my-5">
  <h1 class="text-center mb-4">Log In</h1>

  <% if flash[:notice] %>
    <div class="alert alert-warning text-center"><%= flash[:notice] %></div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg">
        <div class="card-header text-center">
          <h4>Welcome Back!</h4>
        </div>
        <div class="card-body">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="form-group mb-3">
              <%= f.label :username, class: "font-weight-bold" %>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <%= f.text_field :username, class: "form-control", required: true, placeholder: "Enter your username" %>
              </div>
            </div>
            <div class="form-group mb-4">
              <%= f.label :password, class: "font-weight-bold" %>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                </div>
                <%= f.password_field :password, class: "form-control", required: true, placeholder: "Enter your password" %>
              </div>
            </div>
            <div class="form-group text-center">
              <%= f.submit "Log In", class: "btn btn-primary btn-block" %>
            </div>
            <div class="text-center mt-3">
              <a href="#" class="text-muted">Forgot your password?</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>