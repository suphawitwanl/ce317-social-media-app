<h1>Log In</h1>

<% if flash[:notice] %>
  <div class="alert alert-warning"><%= flash[:notice] %></div>
<% end %>

<%= form_with url: login_path do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Log In" %>
  </div>
<% end %>
